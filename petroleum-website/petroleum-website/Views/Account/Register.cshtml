@model petroleum_website.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@*@{
        Layout = null;
    }
    <link href="~/Content/bootstrap.css" rel="stylesheet" />*@
<link href="~/Content/login.css" rel="stylesheet" />

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="section">
        <div class="container">
            <div class="row full-height justify-content-center">
                <div class="col-12 text-center align-self-center py-5">
                    <div class="section pb-5 pt-5 pt-sm-2 text-center">
                        @*<h6 class="mb-0 pb-3"><span>Log In </span><span>Sign Up</span></h6>*@
                        @*<input class="checkbox" type="checkbox" id="reg-log" name="reg-log" />*@
                        <label for="reg-log"></label>
                        <div class="card-3d-wrap mx-auto">
                            <div class="card-3d-wrapper">

                                <!--####### Register #######-->

                                <div class="card-front">
                                    <div class="center-wrap">
                                        <div class="section text-center">
                                            <h4 class="mb-4 pb-3">Sign Up</h4>
                                            <div class="form-group">
                                                <input type="text" name="Email" class="form-style" placeholder="Your Email" id="logname" autocomplete="off">
                                                @*@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })*@

                                                <i class="input-icon uil uil-user"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="password" name="Password" class="form-style" placeholder="Enter Password" id="Password" autocomplete="off">
                                                @*@Html.PasswordFor(m => m.Password, new { @class = "form-control" })*@

                                                <i class="input-icon uil uil-at"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="password" name="ConfirmPassword" class="form-style" placeholder="Enter ConfirmPassword" id="ConfirmPassword" autocomplete="off">
                                                <i class="input-icon uil uil-lock-alt"></i>
                                            </div>
                                            @*<a href="#" class="btn mt-4">submit</a>*@
                                            <input type="submit" class="btn mt-4" value="Register" />

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}























































@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
